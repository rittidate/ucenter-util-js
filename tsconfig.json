{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
    // "emitDecoratorMetadata": true,
    // "allowJs": true,
    // "checkJs": true,
    // "strict": true,
    // "noImplicitAny": false,
    // "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "test/**/*.ts",
    "test/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}